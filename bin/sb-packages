#!/bin/sh

# Shows how many packages can be upgraded

updates=$(checkupdates | wc -l | tr -d '\n' | xargs)

printf " %s" "$updates"

case $BLOCK_BUTTON in
	1) notify-send " $updates packages can be upgraded" "Right click to update !!!" ;;
	3) setsid -f $TERMINAL sh -c 'sleep 0.1; paru -Syu; echo Done - Press enter to exit; read'; kill -46 $(pidof dwmblocks) ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
