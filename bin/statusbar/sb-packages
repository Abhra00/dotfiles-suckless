#!/bin/sh

#!/bin/sh

# Count available updates
updates=$(checkupdates 2>/dev/null | wc -l | xargs)

# Show the icon with update count
printf " %s" "$updates"

case $BLOCK_BUTTON in
    1) notify-send " $updates packages can be upgraded" "Right click to update !!!" ;;
    3) 
	setsid -f "$TERMINAL" sh -c 'paru -Syu; echo Done - Press enter to exit; read'
	kill -46 $(pidof dwmblocks)
        ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

