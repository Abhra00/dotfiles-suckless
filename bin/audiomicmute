#!/bin/sh

mute_val=$(wpctl get-volume @DEFAULT_SOURCE@)

case "$mute_val" in
  *MUTED*)
    dunstify -u low -i "mic-mute" "🎙️Mic is unmuted"
    kill -45 "$(pidof dwmblocks)"
    ;;
  *)
    dunstify -u low -i "mic-unmute" "🎙️🚫Mic is muted"
    kill -45 "$(pidof dwmblocks)"
    ;;
esac

wpctl set-mute @DEFAULT_SOURCE@ toggle

