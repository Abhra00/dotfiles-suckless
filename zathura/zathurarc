# Options
set recolor                      "true"
set recolor-keephue              "true"
set window-title-home-tilde      true
set statusbar-basename           true
set selection-clipboard          clipboard
set database                     null

# Keymaps (unchanged)
map u                             scroll half-up
map d                             scroll half-down
map D                             toggle_page_mode
map r                             reload
map R                             rotate
map K                             zoom in
map J                             zoom out
map i                             recolor
map p                             print
map g                             goto top

map [fullscreen] u                scroll half-up
map [fullscreen] d                scroll half-down
map [fullscreen] D                toggle_page_mode
map [fullscreen] r                reload
map [fullscreen] R                rotate
map [fullscreen] K                zoom in
map [fullscreen] J                zoom out
map [fullscreen] i                recolor
map [fullscreen] p                print
map [fullscreen] g                goto top

# --------------------------------------
#           Colors
# --------------------------------------

# Background / Foreground
set default-bg                    "#292D3E"
set default-fg                    "#EEFFFF"

# Status Bar
set statusbar-fg                  "#EEFFFF"
set statusbar-bg                  "#31364A"

# Input Bar
set inputbar-bg                   "#31364A"
set inputbar-fg                   "#EEFFFF"

# Notifications
set notification-bg               "#31364A"
set notification-fg               "#EEFFFF"

set notification-error-bg         "#31364A"
set notification-error-fg         "#ff5572"     # palenight red

set notification-warning-bg       "#31364A"
set notification-warning-fg       "#FFCA28"     # palenight yellow

# Highlights
set highlight-color               "#82AAFF"     # palenight blue
set highlight-active-color        "#C792EA"     # palenight magenta

# Completion Menu
set completion-bg                 "#292D3E"
set completion-fg                 "#EEFFFF"

set completion-highlight-bg       "#7e57c2"     # purple accent
set completion-highlight-fg       "#EEFFFF"

# Recolor (PDF dark mode)
set recolor-lightcolor            "#292D3E"
set recolor-darkcolor             "#EEFFFF"

# Fonts / GUI
set font                          "Iosevka Nerd Font"
set guioptions                    none
